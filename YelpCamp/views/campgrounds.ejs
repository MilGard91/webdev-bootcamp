<% include partials/header %>
    
    <div class="container">
        <div class="jumbotron">
            <div class="container">
                <h1>Welcome to the YelpCamp</h1>
                <p>View our hand-picked campgrounds all over the world</p>
                <p>
                    <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add a New Camp Ground</a>
                </p>
            </div>
        </div>
        <div class="row text-center" style="display:flex; flex-wrap: wrap; ">
            <% campgrounds.forEach(campground => { %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= campground.image %>" alt="<%= campground.name %>">
                        <div class="caption">
                            <h4>
                                <%= campground.name %>
                            </h4>
                        </div>
                        <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">Show More!</a>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <% include partials/footer %>